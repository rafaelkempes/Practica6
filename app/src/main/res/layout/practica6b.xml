<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EF4920">

    <View
        android:id="@+id/view"
        android:layout_width="4dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="#000000"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/view"
        android:background="#000000"/>

    <ImageView
        android:id="@+id/Dinero"
        android:layout_width="267dp"
        android:layout_height="465dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/dinero" />

    <ImageView
        android:id="@+id/dinerosincirculo"
        android:layout_width="70dp"
        android:layout_height="66dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="124dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_pig_1"
        app:tint="#FFFFFF" />

    <TextView
        android:id="@+id/send"
        android:layout_width="94dp"
        android:layout_height="18dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="16dp"
        android:text="Send Money"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dinerosincirculo"
        tools:ignore="MissingConstraints"
        android:textColor="#FFFFFF"/>

    <ImageView
        android:id="@+id/dinerocirculo"
        android:layout_width="80dp"
        android:layout_height="74dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="124dp"
        android:layout_marginEnd="65dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/dinerosincirculo"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_pig_2"
        app:tint="#FFFFFF" />

    <TextView
        android:id="@+id/request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="208dp"
        android:layout_marginTop="80dp"
        android:text="Request money"
        app:layout_constraintLeft_toLeftOf="@+id/send"
        app:layout_constraintTop_toTopOf="@id/dinerocirculo"
        android:textColor="#FFFFFF"/>

    <ImageView
        android:id="@+id/scaner"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_marginStart="54dp"
        android:layout_marginBottom="123dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_pig_3"
        app:tint="#FFFFFF"/>

    <TextView
        android:id="@+id/Tescaner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="54dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="78dp"
        android:text="scan to pay"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toStartOf="@+id/view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scaner" />

    <ImageView
        android:id="@+id/grafica"
        android:layout_width="84dp"
        android:layout_height="64dp"
        android:layout_marginEnd="65dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/scaner"
        app:srcCompat="@drawable/ic_pig_4"
        app:tint="#FFFFFF"
        tools:layout_editor_absoluteY="627dp" />

    <TextView
        android:id="@+id/Tgrafica"
        android:layout_width="103dp"
        android:layout_height="31dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="12dp"
        android:text="review your transaction"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.315"
        app:layout_constraintStart_toEndOf="@+id/Tescaner"
        app:layout_constraintTop_toBottomOf="@+id/grafica"
        android:textColor="#FFFFFF"/>

</androidx.constraintlayout.widget.ConstraintLayout>